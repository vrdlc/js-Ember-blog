<div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" }}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{#bs-textarea value=body id="body" }}{{/bs-textarea}}
      </div>

      <div class="form-group">
        <label for="link">Link</label>
        {{input value=link id="link" }}
      </div>

      <div class="form-group">
        <label for="screenshot">Screenshot</label>
        {{input value=screenshot id="screenshot"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{#x-select value=category}}
        {{#each categories as |category|}}
          {{#x-option value=category}}{{category.name}}{{/x-option}}
        {{/each}}
        {{/x-select}}
      </div>
    <button {{action 'savePost'}}>Save</button>
  </form>
</div>
