{{#if updatePostForm}}
<h4>Update {{post.title}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder=post.title}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" placeholder=post.date}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{#bs-textarea value=body id="body" placeholder=post.body}}{{/bs-textarea}}
    </div>

    <div class="form-group">
      <label for="link">Link</label>
      {{input value=link id="link" placeholder=post.link}}
    </div>

    <div class="form-group">
      <label for="screenshot">Screenshot</label>
      {{input value=screenshot id="screenshot" placeholder=post.screenshot}}
    </div>

    <button {{action 'update' post}}>Save</button>
  </form>
</div>
{{else}}
<button class="btn btn-sm btn-default" {{action 'updatePostForm'}}>Update</button>
{{/if}}
